  </ItemGroup>

  <ItemGroup>
    <None Update="TypeMembersAttributeDecorationTests.VerifyAttributes.approved.txt">
      <DependentUpon>$(
  [System.String]::Copy('%(FileName)')
    .SubString(
      0,
      $([System.String]::Copy('%(FileName)').IndexOf('.'))
    )
)$(ProjectExt.Replace('proj', ''))</DependentUpon>
    </None>
  </ItemGroup>

